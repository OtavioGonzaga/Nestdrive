{
	"moduleFileExtensions": ["js", "json", "ts"],
	"rootDir": "..",
	"testEnvironment": "node",
	"testRegex": ".e2e-spec.ts$",
	"transform": {
		"^.+\\.(t|j)s$": "ts-jest"
	},
	"moduleNameMapper": {
		"^src/(.*)$": "<rootDir>/src/$1",
		"^typeorm/(.*)$": "<rootDir>/typeorm/$1",
		"^test/(.*)$": "<rootDir>/test/$1",
		"^@files/(.*)$": "<rootDir>/files/$1",
		"^@utils/(.*)$": "<rootDir>/src/utils/$1",
		"^@typeorm/(.*)$": "<rootDir>/src/typeorm/$1",
		"^@common/(.*)$": "<rootDir>/src/common/$1"
	}
}
